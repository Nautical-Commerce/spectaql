{{#unless hideInNav}}
  {{#if items}}
    <div class="nav-group">
      <{{ itemHeadingTag headingNumber }} class="nav-group-title" {{{ ariaLevel headingNumber }}}>{{name}}</{{ itemHeadingTag headingNumber }}>
      <ul class="nav-group-items">
        {{#each items}}
          {{#if makeNavSection}}
            {{>layout/nav/section-item headingNumber=(math ../headingNumber "+" 1 )}}
          {{else}}
            {{>layout/nav/item headingNumber=(math ../headingNumber "+" 1 )}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  {{else}}
    <li><a href="#{{./htmlId}}">{{name}} {{#if isQuery}}<span class="badge badge--query">Q</span>{{else if isMutation}}<span class="badge badge--mutation">M</span>{{else if isSubscription}}<span class="badge badge--mutation">S</span>{{/if}}</a></li>
  {{/if}}
{{/unless}}
